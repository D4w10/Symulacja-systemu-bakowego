<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/admin_profile.css">
  <title>Admin Panel</title>
</head>

<body>
  <nav>
    <h4>Admin panel</h4>
    <ul>
      <li><a href="/admin">Profile</a></li>
      <li><a href="/auth/logout">Logout</a></li>
    </ul>
  </nav>
  <main>
    <h1>Lista użytkowników</h1>
    <form action="/admin" method="get">
      <input type="text" name="search" placeholder="Szukaj użytkownika">
      <button type="submit">Szukaj</button>
    </form>
    <div class="sort-buttons">
      <a href="/admin?sort=id">Sortuj po ID</a>
      <a href="/admin?sort=firstName">Sortuj po Imieniu</a>
      <a href="/admin?sort=lastName">Sortuj po Nazwisku</a>
      <a href="/admin?sort=bilans">Sortuj po Bilansie</a>
      <a href="/admin?sort=login">Sortuj po Loginie</a>
    </div>
    <div class="users-grid">
      <% users.forEach(function(user) { %>
        <div class="user-card">
          <p>ID: <%= user.id %></p>
          <p>Imię: <%= user.firstName %></p>
          <p>Nazwisko: <%= user.lastName %></p>
          <p>Login: <%= user.login %></p>
          <p>Bilans: <%= user.bilans %></p>
          <p>Numer konta: <%= user.account_number %></p>
          <a href="/edit/<%= user.id %>">Edytuj</a>
          <a href="/delete/<%= user.id %>" onclick="return confirm('Czy na pewno chcesz usunąć tego użytkownika?')">Usuń</a>
        </div>
      <% }); %>
        </div>
  </main>
</body>

</html>
