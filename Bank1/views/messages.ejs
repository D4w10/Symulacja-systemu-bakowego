  <h1>Twoje wiadomości</h1>
  <main>
<div class="message">
  <% if (messages && messages.length > 0) { %>
    <ul>
      <% messages.forEach(function(message) { %>
        <li>
          <strong>Nagłówek:</strong> <%= message.naglowek %><br>
          <strong>Treść:</strong> <%= message.tresc %><br>
          <strong>Wysłano:</strong>  <%= message.formatted_date %> <br>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>Brak wiadomości.</p>
  <% } %>
</div>
</main>
